            @Html.DropDownList("IdProveedor", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdProveedor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Cantidad de producto a vender</label>
        <div class="col-md-10">
            <input type="text" id="cantidadProducto" name="cantidadProducto" placeholder="canidad de producto a vender" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Precio de vente</label>
        <div class="col-md-10">
            <input type="text" id="precioVenta" name="precioVenta" class="form-control" />
        </div>
