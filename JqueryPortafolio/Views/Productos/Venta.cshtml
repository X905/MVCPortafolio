@model JqueryPortafolio.Models.Tbl_Producto

@{
    ViewBag.Title = "Venta";
}

<h2>Venta</h2>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    $(document).ready(function () {
        $('#cantidadProducto').on('input', function () {
            $.ajax({
                data: { cantidadProducto: $('#cantidadProducto').val(), IdProducto: @Model.IdProducto},
                type: 'GET',
                url: '@Url.Action("PrecioVenta")',
                success: function (resultado) {
                    $('#precioVenta').val(resultado);
                }
            });
        });
    });
</script>

